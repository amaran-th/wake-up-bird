<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_login_logo"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/login_logo"
            android:src="@drawable/ic_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_front"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/binggrae_bold"
                android:text="일어나"
                android:textColor="@color/black_color"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/text_view_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/binggrae_bold"
                android:text="새"
                android:textColor="@color/primary_color"
                android:textAlignment="center"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_github_login"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="48dp"
            android:layout_marginBottom="56dp"
            android:background="@drawable/bg_login_kakao"
            android:baselineAligned="false"
            android:gravity="fill_horizontal|center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:contentDescription="@string/login_github_button_label"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_login_kakao" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/binggrae_regular"
                android:text="@string/login_github_button_label"
                android:textAlignment="center"
                android:textColor="@color/kakao_login_color"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</layout>
